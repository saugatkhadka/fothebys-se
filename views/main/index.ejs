<% include ../partials/header %>



<div class="container">

  <% var count = 0; %>
  <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
      <div class="col-md-6 px-0">
          <h1 class="display-4 font-italic"><%= auctions[0].name %></h1>
          <p class="lead my-3"><%= auctions[0].description %></p>
          <p class="lead mb-0"><a href="/admin/auction/<%= auctions[0]._id %>" class="text-white font-weight-bold">Continue reading...</a></p>
      </div>
  </div>
  <div class="row mb-2">
  <% auctions.forEach(auction => { %>
      <% if(count++ == 0) { %>
       
      <% } else { %>
        
          <div class="col-md-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary"><%= auction.location  %></strong>
                <h3 class="mb-0"><%= auction.name %></h3>
                <div class="mb-1 text-muted"><%= new Date(auction.date).toDateString(); %></div>
                <p class="card-text mb-auto"><%= auction.description %></p>
                <a href="/admin/auction/<%= auction._id %>" class="stretched-link">Continue reading</a>
              </div>
              <div class="col-auto d-none d-lg-block">
                <!-- <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg"
                  preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                  <title>Placeholder</title>
                  <rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef"
                    dy=".3em">Thumbnail</text>
                </svg> -->

                <img bd-placeholder-img src="/uploads/" alt="">
                <%= auction.lotItems.fileName %>
              </div>
            </div>
          </div>
        
      <% } %>   


  <% }); %>
  </div>
</div>




</div>



<% include ../partials/footer %>