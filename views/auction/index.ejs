<% include ../partials/newAdminHeader %>

<div class="container">
    <div class="row row-cards row-deck">
        <div class="col-12">
            <div class="card">
                <div class="card">
                    <div class="row custom-padding">
                        <div class="col-sm-12 col-lg-8">
                            <h2>Auction</h2>
                        </div>
                        <div class="col-sm-12 col-lg-4">
                            <div class="card custom-padding">
                                <h2>Auction Registration</h2>
                                <a class="btn btn-block btn-danger btn-lg" href="/admin/auction/new">Add Auction</a>
                                <small>Add new auction</small>
                                <small>90 items</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
                        <thead>
                            <tr>
                                <th>Auction Name</th>
                                <th class="text-center">Theme</th>
                                <th>Location</th>
                                <th>Lot Count</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% auctions.forEach((auction) => { %>
                            <tr>
                                <td>
                                    <div><a href="/admin/auction/<%= auction._id %>"><%= auction.name %></a></div>
                                    <div class="small text-muted">
                                        <!-- TODO: Format Date -->
                                        Created On: <%= new Date(auction.createdAt).toDateString(); %>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div><%= auction.theme %></div>
                                </td>
                                <td>
                                    <div class="small text-muted"><%= auction.location %></div>
                                    <div><%= auction.period %></div>
                                </td>
                                <td>
                                    <div><%= auction.lotItems.length %></div>
                                </td>
                                <td class="text-right">
                                  <a href="/admin/auction/<%= auction._id %>/edit" class="btn btn-secondary btn-sm">Edit</a>

                                  <div class="item-action dropdown">
                                      <button class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">Actions</button>
                                      <div class="dropdown-menu dropdown-menu-right">
                                          <a href="/admin/auction/<%= auction._id %>/edit" class="dropdown-item"><i class="dropdown-icon fe fe-edit"></i> Edit </a>
                                          <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fe fe-message-square"></i> Something else here</a>
                                          <div class="dropdown-divider"></div>
                                          <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fe fe-link"></i> Separated link</a>
                                    </div>
                                  </div>
                                  </td>
                                  <td>
                                    <a class="icon" href="javascript:void(0)">
                                      
                                      <form class="icon" action="/admin/auction/<%= auction._id %>?_method=DELETE" id="table-form-delete" method="POST">
                                        <input type="hidden" name="_csrf" value=<%=_csrf %> />
                                        <input type="hidden" name="current_user_id" value="<%= user._id %>">
                                        <button class="btn btn-danger btn-sm"><i class="fe fe-trash"></i></button>
                                      </form>
                                    </a>
                                  </td>
                            </tr>

                            <% }); %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>



<% include ../partials/newAdminFooter %>