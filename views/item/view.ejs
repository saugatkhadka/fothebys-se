<% include ../partials/newAdminHeader %>

<div class="container">
  <div class="row row-cards">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Item</h3>
      </div>
      
      <div class="card-body">
        <div class="media mb-5">
          <img class="d-flex mr-5 h-8 rounded" src="/uploads/<%= item.images[0].filename %>" alt="Images">
          <div class="media-body">
            <h5><%= item.name %></h5>
            <address class="text-muted small">
              <%= item.description %>
            </address>
          </div>
        </div>

        <div class="row">
          <div class="col-6">
            <div class="h6">Category</div>
            <p><%= item.category %></p>
          </div>
          <div class="col-6">
            <div class="h6">Classification</div>
            <p><%= item.classification %></p>

          </div>
          <div class="col-6">
            <div class="h6">AuthorShip</div>
            <p><%= item.authorship %></p>

          </div>
          <div class="col-6">
            <div class="h6">Year Produced</div>
            <p><%= item.yearProduced %></p>
          </div>
        </div>

        <div class="h6">Notes</div>
        <p><%= item.notes %></p>
      </div>
    </div>
    <% item.images.forEach(image => { %>
      <div class="col-sm-6 col-lg-4">
        <div class="card p-3">
          <a href="/uploads/<%= image.filename %>" class="mb-3">
            <img src="/uploads/<%= image.filename %>" alt="<%= image.originalname %>" class="rounded">
          </a>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<!-- row cards end here -->


<% include ../partials/newAdminFooter %>